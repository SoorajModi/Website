<!DOCTYPE html>
<html lang="en" dir="ltr">
<%- include('partials/header'); -%>
<body>
<div class="container">
    <%- include('partials/navbar'); -%>
    <main>
        <div class="main-header">
            <h1>Experience</h1>

            <h2>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor
                labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation
                laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit
            </h2>

            <% experiences.forEach((exp) => { %>
                <hr>
                <div class="container divider cat-header">
                    <div class="row">
                        <div class="col-11">
                            <h2><%= exp.title %></h2>
                            <h6><%= exp.subheading %></h6>
                        </div>
                        <div class="col-1 arrow-btn">
                            <a class="expand-btn center" data-toggle="collapse" data-target="#collapse<%= exp.uuid %>"
                               aria-expanded="false" aria-controls="collapse<%= exp.uuid %>">
                                <i class="animate-icon fa fa-chevron-left" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="collapse extra-info-card" id="collapse<%= exp.uuid %>">
                    <div class="card card-body">
                        <%- exp.body %>
                    </div>
                </div>

            <% }); %>

            <hr>

            <div class="cat-list">
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <h2>Technical Skills</h2>
                    </div>
                </div>
                <div class="row text-center">
                    <div class="col-md-6 col-sm-12 left">
                        <ul class="list-unstyled">
                            <% skillsLeft.forEach((skill) => { %>
                                <li><%= skill.skill %></li>
                            <% }); %>
                        </ul>
                    </div>
                    <div class="col-md-6 col-sm-12 right">
                        <ul class="list-unstyled">
                            <% skillsRight.forEach((skill) => { %>
                                <li><%= skill.skill %></li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
</body>
<%- include('partials/footer'); -%>
</html>
