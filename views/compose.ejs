<%- include('partials/header'); -%>
<body>
<%- include('partials/navbar.ejs'); -%>
<main role="main">
    <div class="gap major-gap">
    </div>

    <div class="cat-header">
        <h1>Compose Blog Post</h1>
    </div>

    <div class="container" style="padding-top: 0">
        <div class="row">
            <div class="col-sm-12">
                <form action="/blog/compose" method="post">
                    <div class="form-group">
                        <label for="composeTitle" style="width: 100%">Title
                            <input class="form-control" type="text" name="composeTitle">
                        </label>
                        <label for="composeDescription" style="width: 100%">Description
                            <textarea class="form-control" name="composeDescription" rows="3"></textarea>
                        </label>
                        <label for="composeBody" style="width: 100%">Body
                            <textarea id="body" class="form-control" name="composeBody" rows="8" cols="80"></textarea>
                        </label>
                    </div>
                    <button class="btn btn-secondary" type="submit" name="button">Publish</button>
                </form>
            </div>
        </div>
    </div>
</main>
</body>
<%- include('partials/footer'); -%>